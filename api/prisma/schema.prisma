generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model User{
  id String @id @default(uuid()) 
  name String
  password String
  task Task[] 
}


model Task {
  id          String   @id @default(uuid())
  title       String
  description String
  deadline    DateTime     
  status      String
  userId String
  user User @relation(fields: [userId], references: [id])
  tag Tag[] @relation("task-tag")
}


model Tag{
  id String @id @default(uuid()) 
  name String
  password String 
  task Task[] @relation("task-tag")
}
